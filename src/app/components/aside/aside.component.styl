.aside-container
  width 210px
  height 500px
  background #ffffff
  border-radius 8px
  margin-left 30px
  .detail
    padding 30px 20px
    .basic
      padding-bottom 15px
      border-bottom 1px solid #F5F5F5

      .name
        display flex
        align-items center
        height 50px
        font-size 20px
        border-bottom 1px solid #F5F5F5
        p
          margin 0
      .content-item
        display flex
        justify-content space-between
        align-items center
        padding 5px 0
        label
          font-size 12px
        p
          margin 0
          font-size 12px
    .context
      h3
        font-size 12px
      .folder
        .file-item
          display flex
          justify-content flex-start
          align-items center
          margin 10px 0
          svg-icon
            width 20px
            margin-right 15px
          p
            margin 0
            text-align left

      .photo
        img
          width 100%
          height auto
      .video
        video
          width 100%
          height auto

  .empty
    display flex
    justify-content center
    align-items flex-start
    padding-top 50px
    font-size 16px
    color #556F96
