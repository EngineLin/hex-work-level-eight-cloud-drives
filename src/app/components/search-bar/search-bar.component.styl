.search-bar-container
  margin-top 15px
  display flex
  justify-content space-between
  align-items center

  .search-button
    width 32px
    height 32px
    display flex
    justify-content center
    align-items center
    background #556F96
    cursor pointer

  label
    flex 1
    .input
      width 100%
      height 32px
      border unset
      font-size 18px
      &:focus
        outline unset

  .draw-button
    width 32px
    height 32px
    display flex
    justify-content center
    align-items center
    background #D9D9D9
    cursor pointer
