.grid-file-container
  width 200px
  border 1px solid black
  cursor pointer
  .top-container
    box-sizing border-box
    border-bottom 1px solid #F5F5F5
    width 100%
    height 150px
    display flex
    justify-content center
    align-items center
    padding 5px
    img
      height 100%
      width auto
    video
      height 100%
      width 100%
    svg-icon
      height 100px
      width 100px

  .bottom-container
    box-sizing border-box
    padding 5px 15px
    width 200px
    height 50px
    display flex
    justify-content space-between
    align-items center
    .type-icon
      margin-right 10px
    .name
      margin 0 15px 0 0
      font-size 18px
      max-width 130px
      overflow hidden
      text-overflow ellipsis
      white-space nowrap

