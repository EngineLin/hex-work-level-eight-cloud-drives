.active
  display inline-block !important
.file-popup-container
  display none
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  &::before
    content ''
    background rgba(0, 0, 0, .4)
    position absolute
    top 0
    right 0
    bottom 0
    left 0

  .name
    margin 0
    position absolute
    top 50px
    left 50px
    font-size 30px
    color white

  .player
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    img
      width 100%
      height 100%
    video
      width 100%
      height 100%
    .document
      width 100%
      height 100%
      background white
      padding 30px 15px
      p
        font-size 20px
