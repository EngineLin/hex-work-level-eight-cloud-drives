.progress-bar-container
  overflow hidden

  .label-wrapper
    display flex
    justify-content space-between
    align-items center
    p
      margin 0
      font-size 10px
      span
        margin-right 8px

  .progress-bar
    transition ease right 300ms
    background #ffffff
    width 450px
    height 10px
    position relative
    .bar
      width 100%
      height 100%
      background #556F96
      position absolute
      top 0
