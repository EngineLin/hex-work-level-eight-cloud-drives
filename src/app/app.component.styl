.content
  background #f5f5f5
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  .container
    max-width 1280px
    margin 50px auto 0
    padding 30px 50px 50px
    .dashboard-container
      display flex
      justify-content center
      align-items flex-end
      margin-top 30px
      .main-container
        flex 1
        .main-top
          display flex
          justify-content flex-start
          align-items flex-end
          .toggle-wrapper
            display flex
            justify-content center
            align-content center

        .main-body
          width 100%
          height 600px
          background #ffffff
          border-radius 0 8px 8px 8px
          box-sizing border-box
          padding 30px 50px
          .table-container
            height 450px
            overflow-y scroll
          .button-container
            display flex
            justify-content start
            align-items center
            .plus-button-container
              display flex
              justify-content flex-start
              align-content center
              p
                display flex
                justify-content center
                align-items center
                margin 0 0 0 15px
                font-size 14px
              &:first-child
                margin-right 30px

